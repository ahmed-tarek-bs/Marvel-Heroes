<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_corners"
    android:maxWidth="200dp">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/hero_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintDimensionRatio="2:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedCornerImage10"
        app:strokeColor="@color/marvel_red"
        app:strokeWidth="3dp"
        tools:src="@drawable/im_placeholder" />

    <TextView
        android:id="@+id/hero_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/bg_rounder_corner_card"
        android:backgroundTint="@color/marvel_red"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/hero_img"
        app:layout_constraintEnd_toEndOf="@id/hero_img"
        app:layout_constraintStart_toStartOf="@id/hero_img"
        tools:text="Iron Man" />


</androidx.constraintlayout.widget.ConstraintLayout>